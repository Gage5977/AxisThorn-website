{
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "public",
  "framework": null,
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/invoices",
      "destination": "/invoices.html"
    },
    {
      "source": "/app",
      "destination": "/app.html"
    },
    {
      "source": "/banking",
      "destination": "/banking.html"
    },
    {
      "source": "/banking-portal",
      "destination": "/banking-portal.html"
    },
    {
      "source": "/terminal",
      "destination": "/terminal.html"
    },
    {
      "source": "/axis-ai",
      "destination": "/axis-ai.html"
    }
  ],
  "redirects": [
    {
      "source": "/consultation.html",
      "destination": "/#services",
      "permanent": false
    },
    {
      "source": "/implementation.html",
      "destination": "/#services",
      "permanent": false
    },
    {
      "source": "/support.html",
      "destination": "/#services",
      "permanent": false
    },
    {
      "source": "/1099.html",
      "destination": "/banking-portal.html",
      "permanent": false
    },
    {
      "source": "https://www.axisthorn.com/:path*",
      "destination": "https://axisthorn.com/:path*",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ]
}