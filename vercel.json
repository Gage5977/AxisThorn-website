{
  "buildCommand": "echo 'No build needed'",
  "outputDirectory": "public",
  "framework": null,
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/invoices",
      "destination": "/invoices.html"
    },
    {
      "source": "/app",
      "destination": "/app.html"
    },
    {
      "source": "/banking",
      "destination": "/banking.html"
    },
    {
      "source": "/banking-portal",
      "destination": "/banking-portal.html"
    },
    {
      "source": "/terminal",
      "destination": "/terminal.html"
    },
    {
      "source": "/axis-ai",
      "destination": "/axis-ai.html"
    },
    {
      "source": "/consultation",
      "destination": "/consultation.html"
    },
    {
      "source": "/implementation",
      "destination": "/implementation.html"
    },
    {
      "source": "/support",
      "destination": "/support.html"
    },
    {
      "source": "/services",
      "destination": "/services.html"
    },
    {
      "source": "/about",
      "destination": "/about.html"
    },
    {
      "source": "/portfolio",
      "destination": "/portfolio.html"
    }
  ],
  "redirects": [
    {
      "source": "/1099.html",
      "destination": "/banking-portal.html",
      "permanent": false
    },
    {
      "source": "/1099",
      "destination": "/banking-portal#1099",
      "permanent": false
    },
    {
      "source": "/client-portal",
      "destination": "/invoices",
      "permanent": false
    },
    {
      "source": "/portal",
      "destination": "/invoices",
      "permanent": false
    },
    {
      "source": "/invoice",
      "destination": "/invoices",
      "permanent": false
    },
    {
      "source": "/pay",
      "destination": "/invoices",
      "permanent": false
    },
    {
      "source": "/payment",
      "destination": "/invoices",
      "permanent": false
    },
    {
      "source": "/axis-terminal",
      "destination": "/terminal",
      "permanent": false
    },
    {
      "source": "/ai",
      "destination": "/axis-ai",
      "permanent": false
    },
    {
      "source": "/banking.html",
      "destination": "/banking-portal",
      "permanent": true
    },
    {
      "source": "/consult",
      "destination": "/consultation",
      "permanent": false
    },
    {
      "source": "/implement",
      "destination": "/implementation",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ]
}