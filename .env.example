# Production Environment Variables
# Copy this file to .env and fill in the values

# Environment
NODE_ENV=production

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Authentication
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# Redis (for rate limiting and sessions)
REDIS_URL=redis://redis:6379

# Stripe Payments
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://axisthorn.com,https://www.axisthorn.com

# Optional: Force HTTPS (recommended for production)
FORCE_HTTPS=true

# Optional: Port (defaults to 3000)
PORT=3000

# Optional: Log level (error, warn, info, debug)
LOG_LEVEL=info

# Optional: Session secret (if using sessions)
SESSION_SECRET=your-session-secret-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@axisthorn.com
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@axisthorn.com

# Google Analytics (for frontend)
VITE_GA_MEASUREMENT_ID=GA_MEASUREMENT_ID_HERE

# API Configuration
PAYMENT_API_KEY=your_payment_api_key_here
DEMO_CLIENT_SECRET=demo-secret-key-change-in-production

# Vercel Configuration
VERCEL_URL=https://axisthorn.com